<?xml version="1.0" encoding="UTF-8"?>
<!-- 
	View层使用，直接板块功能模块化，有效降低了前端与后端协作的耦合性
	提高了系统的通用性
	pageName:页面的名称
	functionClassName：数据绑定器的类名称
	displayName：绑定到前段的数据List名称，供JSTL使用，但要避免重复
	id：查询条件中数据的id 主键号
	category_id：查询条件中数据的分类
	limit：取出的数据条数
	displayName:栏目名称，前端需要用 ${dipalyName_name)的方式取出来
	功能说明：DataFromArchiveToView 获取新闻列表
	功能说明：DataFromFocusImageToView 获取焦点图列表 
	功能说明：DataFromPaperToView 获取文章列表
 -->
<pages>
	<page>
		<pageName>index</pageName>
		<functionClassName>DataFromArchiveToView</functionClassName>
		<dataBind>wangzhanredian</dataBind>
		<displayName>网站热点</displayName>
		<id></id>
		<category_id>17</category_id>
		<category_id>18</category_id>
		<category_id>19</category_id>
		<limit>6</limit>
	</page>
